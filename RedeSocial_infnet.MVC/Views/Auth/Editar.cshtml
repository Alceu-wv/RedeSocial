@model RedeSocial_infnet.Service.ViewModel.EdicaoUsuarioViewModel;

<h1>Editar dados do usuário</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2 class="text-center">Edição de Perfil</h2>
            <hr />
            <form asp-action="Editar" method="post" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Localidade, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Localidade, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Localidade, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="AreaMigracao">Qual a área desejada para migração de carreira?</label>
                    @Html.TextBoxFor(m => m.AreaMigracao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AreaMigracao, "", new { @class = "text-danger" })
                </div>
                <br />

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>



