@model IEnumerable<RedeSocial_infnet.Service.ViewModel.PostViewModel>



<h1 class="text-center">Feed do usuário</h1>
<hr />


<table class="table">
    <thead class="text-center">
        <tr>
            <th>
                Título
            </th>
            <th>
                Postagem
            </th>
            <th>
                Usuário
            </th>

            <th>
                Postado em:
            </th>
            <th>
                Imagem:
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conteudo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CriadoEm)
                </td>
                <td>
                    @if (item.Imagem != null)
                    {
                        <img src="data:image;base64,@(Convert.ToBase64String(item.Imagem))" style="max-width: 100px; max-height: 100px;" />
                    }

                <td>
            </tr>
        }
    </tbody>
</table>