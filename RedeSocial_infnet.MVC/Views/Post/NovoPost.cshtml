<h2>Novo Post <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>

<form asp-action="NovoPost" method="post">  
    <div class="form-group">
        <label for="Titulo">Título:</label>
        <input class="form-control" name="Titulo" />
    </div>
    <div class="form-group">
        <label for="Conteudo">Conteúdo:</label>
        <input class="form-control" name="Conteudo" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Post</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
               
                <th>Título</th>
                <th>Conteúdo</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
          
                <td>@Model.Titulo</td>
                <td>@Model.Conteudo</td>              
            </tr>
        </tbody>
    </table>
}

