@model IEnumerable<RedeSocial_infnet.Domain.Models.Post>



<h1 class="text-center">Feed de postagens</h1>
<hr />
<div class="text-center">
@Html.ActionLink("Ir para o seu perfil", "Index", "Perfil", new { userName = ViewBag.userName})
</div>
<br />
<table class="table">
    <thead class="text-center">
        <tr>
            <th>
               Título
            </th>
            <th>
                Postagem
            </th>
            <th>
                Usuário
            </th>
            
            <th>
                Postado em:
            </th>
            <th>
                Imagem:
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr >
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conteudo)
                </td>    
                 <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CriadoEm)
                </td>
                <td>
                    @if (item.Imagem != null)
                    {
                        <img src="data:image;base64,@(Convert.ToBase64String(item.Imagem))" style="max-width: 100px; max-height: 100px;"/>
                    }
           
                <td>
                    @Html.ActionLink("Visualizar Perfil", "Index", "Perfil", new { userName = item.UserName })

                </td>
            </tr>
        }
    </tbody>
</table>